<h2>Producto</h2>
<div class="row">
  <div class="col-xs-6 col-sm-6">
    <%= image_tag @product.instagram_image, class: 'img-responsive' %>
  </div>
  <div class="col-md-6">
    <h4><%= @product.product_name %></h4>
    <%= number_to_currency @product.price, precision: 0 %>
    <br>
    <%= simple_format(truncate @product.description, length: 90, escape: false) %>
  </div>
</div>

<h3>Tienda</h3>
<div class="row">
  <div class="col-xs-4 col-md-2">
    <%= image_tag @product.store.image, class: 'img-responsive' %>
  </div>
  <div class="col-md-10">
    <%= @product.store.name %> / <%= @product.store.instagram_account %>
    <br>
    Tel√©fono: <%= @product.store.phone_number %>
    <br>
    email: <%= @product.store.email %>
  </div>
</div>
