<div class="flashNotices">
  <% flash.each do |name, msg| %>
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= sanitize msg %>
    </div>
  <% end %>
</div>
